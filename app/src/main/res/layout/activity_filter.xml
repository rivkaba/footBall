<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimaryDark"
            android:text="level"
            android:textColor="@color/colorPrimary" />

        <SeekBar
            android:id="@+id/seekBar2"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:max="3"
            android:progress="3" />

        <TextView
            android:id="@+id/textViewTrainingType"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/colorPrimaryDark"
            android:text="Training type"
            android:textColor="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/checkBoxAll"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check all"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorAccent" />

        <TableLayout
            android:id="@+id/tableLayoutCh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="643dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/checkBoxFootWork"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Foot work"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary" />

                <CheckBox
                    android:id="@+id/checkBoxFirstTocth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First tocth"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/checkBoxDriblling"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:text="Driblling"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary" />

                <CheckBox
                    android:id="@+id/checkBoxDeffending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deffending"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/checkBoxShooting"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="Shooting"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary" />

                <CheckBox
                    android:id="@+id/checkBox1on1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 on 1"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/checkBoxPassing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Passing"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/filter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/saveBtn"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:background="@drawable/save" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/profileBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/profilee" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="profile" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButtonCalendar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/calender" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="calendar" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>